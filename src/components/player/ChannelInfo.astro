---
interface Props {
  canal: {
    titles?: {
      ES?: string;
      EN?: string;
    };
    number: number;
    logoUrl: string;
  };
}

const { canal } = Astro.props;
const channelName =
  canal.titles?.ES || canal.titles?.EN || `Canal ${canal.number}`;
---

<div
  class="flex items-center mt-3 mb-6 bg-card p-4 rounded-lg shadow-sm border border-border"
>
  <div
    class="w-16 h-16 rounded-md overflow-hidden bg-muted mr-4 flex items-center justify-center"
  >
    <img
      class="w-full h-full object-contain p-1"
      src={`${canal.logoUrl}`}
      alt={`Logo de ${channelName}`}
      onerror="this.onerror=null; this.src='/placeholder-channel.svg';"
    />
  </div>
  <div>
    <h1 class="text-2xl font-bold text-foreground">
      {channelName}
    </h1>
    <p class="text-muted-foreground">Canal {canal.number}</p>
    <div class="flex items-center mt-1 text-xs text-muted-foreground">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-4 w-4 mr-1 text-primary"
        viewBox="0 0 20 20"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          fill-rule="evenodd"
          d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2h-1V9a1 1 0 00-1-1z"
          clip-rule="evenodd"></path>
      </svg>
      <span>Haz clic en reproducir para iniciar el video</span>
    </div>
  </div>
</div>
